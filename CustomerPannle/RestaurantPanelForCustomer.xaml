<Window x:Class="Restaurant_Manager.CustomerPannle.RestaurantPanelForCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restaurant Detail" Height="600" Width="1000">
    <Grid>
        <TabControl>
            <TabItem Header="Menu">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <ListView Name="MenuListView" MouseDoubleClick="MenuListView_MouseDoubleClick" Grid.Column="0" Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="100"/>
                                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding fType}" Width="100"/>
                                <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="100"/>
                                <GridViewColumn Header="Rating" DisplayMemberBinding="{Binding Rate}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Comments" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListView Name="CommentListView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="User" DisplayMemberBinding="{Binding Users.UserName}" Width="100"/>
                                    <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Details}" Width="200"/>
                                    <GridViewColumn Header="Rating" DisplayMemberBinding="{Binding Rating}" Width="100"/>
                                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Reserve">
                <Grid>
                    <TextBlock Text="Reservation form coming soon..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Order">
                <Grid>
                    <TextBlock Text="Order form coming soon..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
