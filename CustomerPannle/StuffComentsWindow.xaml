<Window x:Class="Restaurant_Manager.CustomerPannle.StuffComentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stuff Detail" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding Materials}" />
            <TextBlock Text="{Binding Price, StringFormat=C}" />
            <TextBlock Text="{Binding Rate}" />
            <ListView Name="CommentListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="User" DisplayMemberBinding="{Binding UserName}" />
                        <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding CommentText}" />
                        <GridViewColumn Header="Rating" DisplayMemberBinding="{Binding Rating}" />
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
